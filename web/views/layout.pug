doctype html
html
  head
    title= title

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-grid.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-reboot.min.css')
    link(rel='stylesheet', href='/stylesheets/codemirror.css')

  body
    nav(class='navbar navbar-expand-lg navbar-dark bg-dark')
      a(class='navbar-brand', href='/') LSSCOJ
      button(class='navbar-toggler', type='button', data-toggle='collapse', data-target='#navbarSupportedContent')
        span(class='navbar-toggler-icon')
      div(class='collapse navbar-collapse', id='navbarSupportedContent')
        ul(class='navbar-nav mr-auto')
          li(class='nav-item')
           a(class='nav-link', href='/contest') Contests
          li(class='nav-item')
           a(class='nav-link', href='/problem') Problemset
          li(class='nav-item')
           a(class='nav-link', href='/submission') Submissions
          li(class='nav-item')
           a(class='nav-link', href='/hack') Hacks
        if isLogin
          ul(class='navbar-nav')
            li(class='nav-item')
            a(class='nav-link', href=`/user/${cur_user.id}`)=cur_user.username
        else
          ul(class='navbar-nav')
            li(class='nav-item')
            a(class='nav-link', href='/login') Login / Register

    main(class='container p-3')
      block content

    .footer
      p(class='text-center') LSSC Copyright Reserved

    script(src='/javascripts/jquery-3.3.1.slim.min.js')
    script(src='/javascripts/popper.min.js')
    script(src='/javascripts/bootstrap.min.js')

    script(src='/javascripts/marked.min.js')
    
    script(src='/javascripts/codemirror.js')
    script(src='/javascripts/codemirror_mode/clike.js')
    script(src='/javascripts/codemirror_mode/python.js')
    script(src='/javascripts/codemirror_mode/pascal.js')
    
    script(src='/javascripts/style.js')
