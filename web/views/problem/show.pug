extends ../layout

block content
  h1(class='page-header text-center')= problem.title
  span(class='text-center') Memeory limit: ,Time-limit:

  h2 Statement
  article(class='markdown')= problem.statement

  h3 Input
  pre= problem.input_description
  h3 Output
  pre= problem.output_description

  each example, index in examples
    h3=  'Example '+(index+1)
    h4 Input
    pre= example.input
    h4 Output
    pre= example.output

  h1(class='page-header text-center') Submit Answer Here
  form(method='post')
    lable(for="language") Language
    select(id="language", name="language")
      option(value="C") C
      option(value="C++") C++
      option(value="Python") Python
      option(value="Java") Java
    div(class='form-group')
      textarea(class='form-control code-area', name='content')
    button(type='submit', class='btn btn-primary') Submit