extends ../layout

block content
  h1(class='page-header text-center')= name
  p(class='text-center') Memeory limit: ,Time-limit:
  article(class='markdown')= content

  h3 Input
  p= input
  h3 Output
  p= output

  each example, index in examples
    h3=  'Example '+index
    h4 Input
    pre= example.input
    h4 Output
    pre= example.output

  form(method='post')
    div(class='form-group')
      textarea(class='form-control code-area')
    button(type='submit', class='btn btn-primary') Submit