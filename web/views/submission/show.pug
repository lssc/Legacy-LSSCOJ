extends ../layout

block content

  table(class='table')
    thead
      tr
        th ID
        th Problem
        th Submitter
        th Result
        th Time
        th Memory
        th Language
        th File size
        th Submit time
        th Judge time
    tbody
      tr
        th(scope='row')
          a(href=`/submissions/${submission.id}`)= submission.id
        td
          a(href=`/problems/${submission.problem_id}`)= submission.problemTitle
        td
          a(href=`/users/${submission.submitter_id}`)= submission.submitter
        td= submission.result
        td= submission.time || '--:--:--'
        td= submission.memory || '--:--:--'
        td= submission.language
        td= submission.tot_size
        td= submission.submit_time

  textarea(class='code-area', disabled) Code here
  
  div(class='text-center')
    button(class='btn btn-danger') Hack this Code!

  h5 Details

  div(class='card')
    div(class='card-header') Test #1
    div(class='card-body')
      b Input:
      pre input here
      
      b Output:
      pre output here

      b Result:
      pre result here
